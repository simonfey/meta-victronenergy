From 52f135592c119ad25f838b91bc1ed257da21fb99 Mon Sep 17 00:00:00 2001
From: Mans Rullgard <mans@mansr.com>
Date: Sat, 14 Aug 2021 14:34:02 +0100
Subject: [PATCH 8/9] ARM: dts: ccgx2: add recovery info for i2c2

---
 arch/arm/boot/dts/sun7i-a20-einstein-ccgx2.dts | 10 ++++++++++
 1 file changed, 10 insertions(+)

diff --git a/arch/arm/boot/dts/sun7i-a20-einstein-ccgx2.dts b/arch/arm/boot/dts/sun7i-a20-einstein-ccgx2.dts
index 3e51c7c96c60..b9e0986d3ca4 100644
--- a/arch/arm/boot/dts/sun7i-a20-einstein-ccgx2.dts
+++ b/arch/arm/boot/dts/sun7i-a20-einstein-ccgx2.dts
@@ -225,6 +225,11 @@
 };
 
 &i2c2 {
+	pinctrl-names = "default", "gpio";
+	pinctrl-0 = <&i2c2_pins>;
+	pinctrl-1 = <&i2c2_gpio_pins>;
+	scl-gpios = <&pio 1 20 GPIO_ACTIVE_HIGH>; /* PB20 */
+	sda-gpios = <&pio 1 21 GPIO_ACTIVE_HIGH>; /* PB21 */
 	status = "okay";
 
 	touchscreen@38 {
@@ -386,4 +391,9 @@
 		       "PH26";
 		function = "emac";
 	};
+
+	i2c2_gpio_pins: i2c2-gpio-pins {
+		pins = "PB20", "PB21";
+		function = "gpio_out";
+	};
 };
